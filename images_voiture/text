     if (isset($_POST['submit'])){
            // récupération des informations de notre fichier 
            $file_name = strip_tags($_FILES['file']['name']);                                   //eviter que le code html sera utiliser
            $file_size = $_FILES['file']['size'];
            $file_tmp = $_FILES ['file']['tmp_name'];
            $file_type = $_FILES['file']['type'];

            $file_ext = explode('.', $file_name); // cahier.jgp   => ['cahier' , 'jpg']         // Récupère l'extension du fichier en transformant la chaîne en minuscule -> créer un tbl
            $file_end = end($file_ext);  // jpg $
            $file_end = strtolower($file_end);                                                  //EXTENSION en miniscule

            $extensions  = [ 'doc', 'jpg', 'docx', 'xls'];                                      // Définit la liste des extensions de fichiers autorisées
            
            if(in_array($file_end, $extensions) === false) {                                    // Si l'extension du fichier n'est pas autorisée, on affiche un message d'erreur
                echo " Veuillez utiliser les extensions suivantes : DOC, JPG , DOCX , XLS";
            }
            elseif($file_size > 300000) {                                                       // Si la taille du fichier dépasse la limite autorisée, on affiche un message d'erreur
                echo " le fichier est trop volumineux";
            }else {                                                                         
                $file_end = preg_replace('/[^A-Za-z0-9.\-]/', '' ,$file_end);                   // On nettoie le nom de fichier en supprimant les caractères spéciaux
                move_uploaded_file($file_tmp, "uploads/".$file_name);                           // On déplace le fichier uploadé vers le répertoire "uploads" avec son nom d'origine
                echo " Le fichier ".$file_name." a été téléchargé avec succès";                 // On affiche un message de succès pour indiquer que le téléchargement a réussi
            }
        }